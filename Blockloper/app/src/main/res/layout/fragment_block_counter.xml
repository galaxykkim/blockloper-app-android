<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/common_fragment_padding">

        <!--목표 블록번호-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutGoalBlockNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/block_counter_row_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/noto_sans_bold_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/block_counter_label_goal_block"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editGoalBlockNumber"
                style="@style/noto_sans_regular_20"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="#91335287"
                android:layout_marginStart="10dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <!--현재 블록번호-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutCurrentBlockNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/block_counter_row_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/layoutGoalBlockNumber">
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/noto_sans_bold_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/block_counter_label_current_block"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textCurrentBlockNumber"
                style="@style/noto_sans_regular_20"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                tools:text="#91335287"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <!--예상 블록시간-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutBlockPredictionTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/block_counter_row_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCurrentBlockNumber">
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/noto_sans_bold_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/block_counter_label_prediction_time"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBlockPredictionTime"
                style="@style/noto_sans_regular_20"
                android:textColor="@color/main_color"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                tools:text="2022.05.22 23:10:55"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <!--현재시간-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textCurrentTime"
            style="@style/noto_sans_bold_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/block_counter_label_current_time"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layoutBlockPredictionTime"
            app:layout_constraintStart_toStartOf="@id/layoutBlockPredictionTime"/>
        <WebView
            android:id="@+id/webViewCurrentTime"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/textCurrentTime"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>